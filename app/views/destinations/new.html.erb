<div class="mx-auto" style="width: 400px;" >
  <h2>Add a new destination</h2>
  <%= form_with model: @destination do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :distance %> <br>
    <%= f.number_field :distance %> <br>
    <%= f.label :image_url %> <br>
    <%= f.input :photo, as: :file
    <%= f.file_field :image_url, accept: 'image/png,image/jpeg' %> <br>
    <%= f.submit %>
  <% end %>
  <%= link_to "Abort!", destinations_path(@spaceship)%>
</div>
