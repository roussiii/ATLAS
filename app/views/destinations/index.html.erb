<div class="container">
  <h1>Destinations</h1>
    <div class="row mt-5 justify-content-md-left">
    <% @destinations.each do |destination| %>
    <div class="col-md-auto">
      <div class="card">
        <div class="card-body">
          <div class="col">
    <%= cl_image_tag destination.photo.key, height: 300, width: 300, crop: :fill, class: "index-card-image" unless destination.photo.key.nil? %>

    </div>

    <div class="col">

      <h3 class="card-title"><%= destination.name %></h3>
      <p class="card-text">Distance: <%= destination.distance %></p>
      <p class="card-text">Price: <%= destination.price %></p>
      <p class="card-text text-muted">Last booked 5 minutes ago.</p>
      <br>

      <%= link_to "Info", destination_path(destination), class: "button-outline" %>
      <%= link_to "Choose Spaceship First", new_booking_path, class: "button-main" %>
      <br>
        </div>
      </div>
    </div>
  </div>
    <% end %>
  </div>

  <br>
  <div class="col">
    <%= link_to "Back to homepage", root_path, class: "btn btn-dark" %>
    <%= link_to "Add a destination", new_destination_path, class: "btn btn-primary"%> <br>
  </div>
</div>
