<div class="mx-auto" style="width: 400px;" >
<h2>Add your spaceship</h2>
<%= form_with model: @spaceship do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>
  <%= f.label :payload %> <br>
  <%= f.number_field :payload %> <br>
  <%= f.label :passenger_capacity %> <br>
  <%= f.number_field :pax %> <br>
  <%= f.label :price %> <br>
  <%= f.number_field :price %> <br>
  <%= f.label :description %> <br>
  <%= f.text_field :description %> <br>
  <%= f.label :photo %> <br>
  <%= f.file_field :photo, accept: 'image/png,image/jpeg' %> <br>
  <%= f.submit %>
<% end %>

<br>
<%= link_to "Abort!", spaceships_path(@spaceship)%>
</div>
