<div class="mx-auto" style="width: 400px;" >
<h2>Add your spaceship</h2>
<%= form_with model: @spaceship do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>
  <%= f.label :payload %> <br>
  <%= f.number_field :payload %> <br>
  <%= f.label :pax %> <br>
  <%= f.number_field :pax %> <br>
  <%= f.label :availability %> <br>
  <%= f.text_field :availability %> <br>
  <%= f.label :description %> <br>
  <%= f.text_field : description %> <br>
  <%= f.label :photo <br>
  <%= f.input :photo, as: :file %>
  <%# <%= f.file_field :photo, accept: 'image/png,image/jpeg' %>
  <%= f.submit %>
<% end %>

<br>
<%= link_to "Abort!", spaceships_path(@spaceship)%>
</div>
